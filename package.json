{
  "name": "yt-dlp-gui-electron",
  "version": "1.0.0",
  "description": "A GUI for yt-dlp built with Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "yt-dlp",
    "electron",
    "youtube",
    "downloader",
    "gui"
  ],
  "author": "Paulo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.paulo.yt-dlp-gui",
    "productName": "YT-DLP GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "AudioVideo"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
